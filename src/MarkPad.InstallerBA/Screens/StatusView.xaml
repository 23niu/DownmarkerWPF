<UserControl
    x:Class="MarkPad.InstallerBA.Screens.StatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:xaml="clr-namespace:MarkPad.InstallerBA.XAML"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="300"
>
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">

        <Button Margin="6" FontSize="36" HorizontalAlignment="Center" Content="Install MARKPAD" Command="{Binding InstallCommand}"
                Visibility="{Binding InstallMarkPad, Converter={xaml:BoolToVisibilityConverter}}" />

        <Button Margin="6" FontSize="36" HorizontalAlignment="Center" Content="Uninstall MARKPAD" Command="{Binding InstallCommand}"
                Visibility="{Binding InstallMarkPad, Converter={xaml:BoolToVisibilityConverter Invert=True}}" />

    </Grid>
</UserControl>